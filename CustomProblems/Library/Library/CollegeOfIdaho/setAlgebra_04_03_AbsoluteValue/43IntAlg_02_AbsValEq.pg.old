DOCUMENT(); # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "contextInequalitiesAllowStrings.pl"
);

TEXT(beginproblem());

######################################
#  Setup


@alphbet = ("a", "b","t","x","y");

$n = random(0,4,1);

$var = $alphbet[$n];



$a = random(1,7,2);

$b = random(9,17,2);



######################################

#  Main text



BEGIN_TEXT

Solve:  \( |$var - $a| = $b \)

$PAR

Answer:  \{ ans_rule(20) \}

$PAR 
Note: Enter your answers as \( b = mm \)  .
For two solutions, enter \( b = mm\ or\ b = nn \) or enter your answer as a set, \( {mm, nn} \)
For no solution, type \(NONE\) and if all real numbers are solutions, type \(All\ real\ numbers\) .

END_TEXT



######################################

#  Answer



Context("Inequalities-AllowStrings");
Context()->variables->are($var=>'Real');
Context()->strings->add("No solution"=>{NONE});


$ans = Compute("$var=-$b + $a or $var=$b + $a")->reduce;
ANS($ans->cmp); 


$showPartialCorrectAnswers = 1;

######################################



COMMENT('MathObject version');
ENDDOCUMENT();

































