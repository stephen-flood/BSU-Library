DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "unionTables.pl",
);

TEXT(beginproblem());

# below are the actual function values at the desired points
# we want the answers to be entered using formulas and not from a calculator

Context("Numeric");
Context()->flags->set(
  tolerance => 0.0000000000001,
  tolType => "absolute",
);

@sin_vals = ( Compute("0"), Compute("1/2"), Compute("sqrt(2)/2"), Compute("sqrt(3)/2"), Compute("1") );
@cos_vals = ( Compute("1"), Compute("sqrt(3)/2"), Compute("sqrt(2)/2"), Compute("1/2"), Compute("0") );
@tan_vals = ( Compute("0"), Compute("1/sqrt(3)"), Compute("1"), Compute("sqrt(3)"), Compute(DNE) );


