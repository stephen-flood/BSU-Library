#    push( @tan_vals, Compute("tan($i)") );
# }

Context()->functions->disable("sin","cos","tan");

BEGIN_TEXT
Complete the following table of values.  Express all answers using exact arithmetic--no decimal numbers.  If the value is defined enter \(DNE\)

$BCENTER
\{ 
BeginTable(border=>1, tex_border=>"1pt", spacing=>0, padding=>4). 
AlignedRow( [ "\( \theta \)"         , "\( 0\)"     , "\( \dfrac{\pi}{6}\)"  , "\(\dfrac{\pi}{4}\)"  , "\(\dfrac{\pi}{3}\)"   , "\(\dfrac{\pi}{2}\)"], align=>CENTER, separation=>0).
AlignedRow( [ "\( \sin(\theta) \)", ans_rule(10), ans_rule(10), ans_rule(10), ans_rule(10), ans_rule(10) ], separation=>0).
AlignedRow( [ "\( \cos(\theta) \)", ans_rule(10), ans_rule(10), ans_rule(10), ans_rule(10), ans_rule(10)  ], separation=>0).
AlignedRow( [ "\( \tan(\theta) \)", ans_rule(10), ans_rule(10), ans_rule(10), ans_rule(10), ans_rule(10) ], separation=>0).
EndTable()
\}
$ECENTER

$BR
$BBOLD
$BCENTER
I recommend that you memorize this table!
$ECENTER
$EBOLD
$BR


END_TEXT

foreach my $fv ( @sin_vals ) {
    ANS( $fv->cmp() );
}
foreach my $fv ( @cos_vals ) {
    ANS( $fv->cmp() );
}
foreach my $fv ( @tan_vals ) {
    ANS( $fv->cmp() );
}


ENDDOCUMENT();        