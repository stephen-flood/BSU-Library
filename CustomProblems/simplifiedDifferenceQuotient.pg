$pi = Real("pi");


$a = non_zero_random(-2,2,1);
$b = non_zero_random(-3,3,1);
$c = non_zero_random(-5,5,1);

#$e = random(2,2,1);

$f = Compute("$a*x^2 + $b*x + $c")->reduce();


$fofone=Compute("$a*1^2 + $b*1 + $c");

$coeff1=(2*$a+$b);
$coeff2=($a+$b + $c);

$fxplus1 = Compute("$a*x^2 + $coeff1*x+$coeff2");



$diffq = Compute("$a*x + $b");

Context("LimitedPolynomial");   # Allow only entry of expanded polynomials



